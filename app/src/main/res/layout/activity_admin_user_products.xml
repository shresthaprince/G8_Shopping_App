<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminUserProductsActivity">


    <RelativeLayout
        android:id="@+id/rl_admin_user_products"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/admin_user_products_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Products"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_user_products_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_admin_user_products"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>