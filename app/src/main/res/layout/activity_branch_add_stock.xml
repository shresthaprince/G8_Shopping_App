<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Branches.BranchAddStockActivity">

    <ImageView
        android:id="@+id/branch_product_image"
        android:layout_below="@+id/branch_product_name"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/branch_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/branch_product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branch_product_image"
        android:text="Product Description"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/branch_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branch_product_desc"
        android:text="Product Price"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/branch_product_stock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="Stock"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/branch_product_price"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:inputType="number" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/branch_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:backgroundTint="@android:color/white"
        android:src="@drawable/add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp" />

</RelativeLayout>