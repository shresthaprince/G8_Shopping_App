<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminManageProductsActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/admin_manage_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp" />

        <EditText
            android:id="@+id/admin_manage_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:layout_below="@+id/admin_manage_product_image"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/admin_manage_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:layout_below="@+id/admin_manage_product_name"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/admin_manage_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:layout_below="@+id/admin_manage_product_description"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/admin_manage_apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_manage_product_price"
            android:background="@drawable/buttons"
            android:text="Apply Changes"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/admin_manage_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_manage_apply_changes_btn"
            android:background="@drawable/buttons"
            android:text="Delete Product"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>